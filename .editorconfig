root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 98
tab_width = 4
trim_trailing_whitespace = true

[{*.bash,*.sh,*.zsh,dd-agent.dockerfile}]
indent_size = 2
tab_width = 2

[{*.graphqlconfig,*.har,*.json}]
indent_size = 2

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2

[{*.yaml,*.yml}]
indent_size = 2
